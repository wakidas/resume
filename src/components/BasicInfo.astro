---
export interface Props {
  name: string;
  birthDate: string;
  socialLinks: {
    platform: string;
    url: string;
    displayText: string;
  }[];
}

const { name, birthDate, socialLinks } = Astro.props;
---

<section>
  <h2>基本情報</h2>
  
  <table>
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>氏名</td>
        <td>{name}</td>
      </tr>
      <tr>
        <td>生年月日</td>
        <td>{birthDate}</td>
      </tr>
      {socialLinks.map(link => (
        <tr>
          <td>{link.platform}</td>
          <td>
            <a href={link.url} target="_blank" rel="noopener noreferrer">
              {link.displayText.includes('shimpeee_') ? (
                <code>{link.displayText}</code>
              ) : (
                link.displayText
              )}
            </a>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</section>
---
import { getEntry } from 'astro:content';

const content = await getEntry('resume', 'self-pr');
const { Content } = await content.render();
---

<section class="self-pr-section">
  <div class="flex items-center gap-3 mb-6">
    <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-green-600 rounded-lg flex items-center justify-center">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
      </svg>
    </div>
    <h2 class="!m-0 !p-0 !bg-none !border-none !text-2xl">自己PR</h2>
  </div>
  <Content />
</section>

<style>
  .self-pr-section :global(h3) {
    @apply text-lg font-medium text-green-600 mt-6 mb-3;
  }

  .self-pr-section :global(p) {
    @apply mb-4;
  }

  .self-pr-section :global(strong) {
    @apply text-gray-200 font-semibold;
  }
</style>
---
import { getEntry } from 'astro:content';

const content = await getEntry('resume', 'self-pr');
const { Content } = await content.render();
---

<section class="self-pr-section">
  <Content />
</section>

<style>
  /* h3はグローバルスタイルを使用 */

  .self-pr-section :global(p) {
    @apply mb-4;
  }

  .self-pr-section :global(strong) {
    @apply text-gray-200 font-semibold;
  }
</style>
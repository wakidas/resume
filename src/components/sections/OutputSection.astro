---
import { getEntry } from 'astro:content';

const content = await getEntry('resume', 'output');
const { Content } = await content.render();
---

<section class="output-section">
  <div class="flex items-center gap-3 mb-6">
    <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-green-600 rounded-lg flex items-center justify-center">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
    </div>
    <h2 class="!m-0 !p-0 !bg-none !border-none !text-2xl">アウトプット</h2>
  </div>
  <Content />
</section>

<style>
  .output-section :global(h3) {
    @apply text-lg font-medium text-green-600 mt-6 mb-3;
  }

  .output-section :global(ul) {
    @apply ml-5;
    list-style-type: none;
  }

  .output-section :global(ul li) {
    @apply mb-1;
    position: relative;
  }

  .output-section :global(ul li:before) {
    content: "・";
    position: absolute;
    left: -1.2em;
    font-weight: bold;
  }

  .output-section :global(ol) {
    @apply ml-5 list-decimal;
  }

  .output-section :global(ol li) {
    @apply mb-1;
  }

  .output-section :global(a) {
    @apply text-green-600 no-underline;
  }

  .output-section :global(a:hover) {
    @apply underline;
  }

  .output-section :global(code) {
    @apply font-sans;
  }

  .output-section :global(p) {
    @apply mb-4;
  }
</style>
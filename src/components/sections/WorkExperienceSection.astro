---
import { getEntry } from 'astro:content';

const content = await getEntry('resume', 'work-experience');
const { Content } = await content.render();
---

<section class="work-experience-section">
  <Content />
</section>

<style>
  /* h3はグローバルスタイルを使用 */

  .work-experience-section :global(ul) {
    @apply ml-5;
    list-style-type: none;
  }

  .work-experience-section :global(ul li) {
    @apply mb-1;
    position: relative;
  }

  .work-experience-section :global(ul li:before) {
    content: "・";
    position: absolute;
    left: -1.2em;
    font-weight: bold;
  }

  .work-experience-section :global(ol) {
    @apply ml-5 list-decimal;
  }

  .work-experience-section :global(ol li) {
    @apply mb-1;
  }

  .work-experience-section :global(strong) {
    @apply text-gray-200 font-semibold;
  }

  .work-experience-section :global(p) {
    @apply mt-3 text-gray-300 leading-relaxed;
  }
  
  /* 会社概要説明の段落スタイル */
  .work-experience-section :global(h3 ~ p:not(:has(strong))) {
    @apply my-4 text-base;
  }

  /* h4スタイル - 期間や担当プロジェクトの見出し */
  .work-experience-section :global(h4) {
    @apply text-lg font-bold mt-6 mb-3 text-emerald-400 border-l-4 border-emerald-500 pl-3;
  }

  /* リスト内のstrongは少し小さく、色を変える */
  .work-experience-section :global(li strong) {
    @apply text-base text-gray-100;
  }
</style>

---
import { getEntry } from 'astro:content';

const content = await getEntry('resume', 'basic-info');
const { Content } = await content.render();

// Calculate age dynamically
const birthDate = new Date(1991, 2, 9); // March 9, 1991 (month is 0-indexed)
const today = new Date();
let age = today.getFullYear() - birthDate.getFullYear();
const monthDiff = today.getMonth() - birthDate.getMonth();
if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
  age--;
}
---

<section class="basic-info-section">
  <Content />
</section>

<script define:vars={{ age }}>
  // Find the birthday cell and append age
  const cells = document.querySelectorAll('.basic-info-section td');
  cells.forEach(cell => {
    if (cell.textContent === '1991年3月9日') {
      cell.textContent = `1991年3月9日（${age}歳）`;
    }
  });
</script>

<style>
  .basic-info-section :global(table) {
    @apply w-full border-collapse my-4 overflow-hidden rounded-lg shadow-sm;
    table-layout: fixed;
  }

  .basic-info-section :global(table td) {
    @apply p-4 border-b border-gray-600 align-top text-gray-200;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .basic-info-section :global(table td:first-child) {
    @apply bg-gradient-to-r from-green-600/20 to-green-500/10 font-semibold w-32 text-gray-200;
  }

  .basic-info-section :global(table th) {
    @apply p-3 border border-gray-300 bg-gray-100 font-semibold text-center;
  }

  .basic-info-section :global(table th:first-child) {
    @apply w-32;
  }

  .basic-info-section :global(table thead) {
    display: none;
  }

  .basic-info-section :global(table a) {
    @apply text-green-400 text-sm no-underline hover:underline;
  }

  .basic-info-section :global(table code) {
    @apply text-green-400 text-sm font-normal;
    background: none;
    padding: 0;
    font-family: inherit;
  }

  @media (max-width: 640px) {
    .basic-info-section :global(table td) {
      @apply p-2 text-sm;
    }
    
    .basic-info-section :global(table td:first-child) {
      @apply w-20 text-sm;
    }

    .basic-info-section :global(table th:first-child) {
      @apply w-20 text-sm;
    }
  }
</style>
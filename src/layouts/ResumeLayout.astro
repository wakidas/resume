---
export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
import '../styles/global.css';
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body class="bg-gray-50 font-sans text-gray-800 leading-relaxed max-w-4xl mx-auto p-5">
    <main class="bg-white p-10 shadow-lg rounded-lg my-5">
      <slot />
    </main>

    <style>
      :global(h1) {
        @apply text-3xl font-bold text-gray-800 border-b-4 border-blue-500 pb-3 mt-0 mb-6;
      }

      :global(h2) {
        @apply text-2xl font-semibold text-gray-700 mt-8 mb-4 border-b border-gray-300 pb-2;
      }

      :global(h3) {
        @apply text-xl font-medium text-blue-600 mt-6 mb-3;
      }

      :global(table) {
        @apply w-full border-collapse my-4;
      }

      :global(table td) {
        @apply p-2 border border-gray-300;
      }

      :global(table td:first-child) {
        @apply bg-gray-50 font-semibold w-32;
      }

      :global(a) {
        @apply text-blue-600 no-underline;
      }

      :global(a:hover) {
        @apply underline;
      }

      :global(ul) {
        @apply ml-5;
        list-style-type: none;
      }

      :global(ul li) {
        @apply mb-1;
        position: relative;
      }

      :global(ul li:before) {
        content: "ãƒ»";
        position: absolute;
        left: -1.2em;
        font-weight: bold;
      }

      :global(ol) {
        @apply ml-5 list-decimal;
      }

      :global(ol li) {
        @apply mb-1;
      }

      :global(hr) {
        @apply my-8 border-0 border-t-2 border-gray-200;
      }

      :global(strong) {
        @apply text-gray-800 font-semibold;
      }

      :global(p) {
        @apply mb-4;
      }

      /* Fix monospace font for code spans */
      :global(code) {
        @apply font-sans;
      }

      @media (max-width: 640px) {
        body {
          @apply p-3;
        }
        
        main {
          @apply p-5;
        }
        
        :global(table td:first-child) {
          @apply w-20 text-sm;
        }
      }
    </style>
  </body>
</html>
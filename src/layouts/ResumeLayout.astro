    <meta property="og:description" content={description || "ËÑáÁî∞ÊÖéÂπ≥„ÅÆËÅ∑ÂãôÁµåÊ≠¥Êõ∏„ÄÇ„Çµ„Éº„Éê„Éº„Çµ„Ç§„Éâ„Ç®„É≥„Ç∏„Éã„Ç¢„Å®„Åó„Å¶„ÅÆÁµåÈ®ì„Å®„Çπ„Ç≠„É´„Çí„ÅîÁ¥π‰ªã„Åó„Åæ„Åô„ÄÇ"} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://wakidas.github.io/resume/" />
    <meta property="og:locale" content="ja_JP" />
    
    <!-- Twitter Card Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description || "ËÑáÁî∞ÊÖéÂπ≥„ÅÆËÅ∑ÂãôÁµåÊ≠¥Êõ∏„ÄÇ„Çµ„Éº„Éê„Éº„Çµ„Ç§„Éâ„Ç®„É≥„Ç∏„Éã„Ç¢„Å®„Åó„Å¶„ÅÆÁµåÈ®ì„Å®„Çπ„Ç≠„É´„Çí„ÅîÁ¥π‰ªã„Åó„Åæ„Åô„ÄÇ"} />
    
    <!-- Additional SEO Tags -->
    <meta name="author" content="ËÑáÁî∞ÊÖéÂπ≥" />
    <meta name="keywords" content="ËÑáÁî∞ÊÖéÂπ≥,ËÅ∑ÂãôÁµåÊ≠¥Êõ∏,„Ç®„É≥„Ç∏„Éã„Ç¢,„Çµ„Éº„Éê„Éº„Çµ„Ç§„Éâ,„Éê„ÉÉ„ÇØ„Ç®„É≥„Éâ,Python,Go,AWS,GCP" />
    <link rel="canonical" href="https://wakidas.github.io/resume/" />
    
    <!-- Modern Typography Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-slate-900 via-purple-900/20 to-slate-800 font-sans text-gray-100 leading-relaxed min-h-screen relative overflow-x-hidden">
    <!-- Ë§áÈõë„Å™ËÉåÊôØË£ÖÈ£æË¶ÅÁ¥† -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Primary gradient orbs -->
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-emerald-400/15 via-teal-500/10 to-cyan-400/8 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-1/3 -left-40 w-96 h-96 bg-gradient-to-tr from-green-400/8 via-emerald-500/6 to-teal-400/4 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 right-1/3 w-80 h-80 bg-gradient-to-tl from-cyan-500/12 via-green-600/8 to-emerald-400/6 rounded-full blur-3xl"></div>
      
      <!-- Secondary accent orbs -->
      <div class="absolute top-20 left-1/4 w-64 h-64 bg-gradient-to-r from-violet-500/6 via-purple-400/4 to-indigo-500/8 rounded-full blur-2xl"></div>
      <div class="absolute bottom-1/4 right-20 w-72 h-72 bg-gradient-to-bl from-amber-400/5 via-orange-500/3 to-red-400/6 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-4xl mx-auto p-5 relative z-10">
      <main class="bg-gray-800/70 backdrop-blur-xl p-10 shadow-[0_8px_32px_rgba(0,0,0,0.4),0_0_0_1px_rgba(255,255,255,0.05),inset_0_1px_0_rgba(255,255,255,0.1)] rounded-3xl my-8 border border-gray-700/30 relative">
        <!-- ÂÜÖÂÅ¥„ÅÆÂÖâÂäπÊûú -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/5 via-transparent to-transparent rounded-3xl pointer-events-none"></div>
        <div class="relative z-10">
          <slot />
        </div>
      </main>
    </div>

    <style>
      :global(h1) {
        @apply text-4xl font-bold bg-gradient-to-r from-emerald-300 via-teal-400 to-cyan-400 bg-clip-text text-transparent mb-4 text-center;
        background-size: 200% 200%;
        animation: gradient-shift 4s ease-in-out infinite;
      }

      :global(h2) {
        @apply text-2xl font-bold text-gray-100 mt-4 mb-3 px-4 py-3 rounded-lg border-l-4;
        background: linear-gradient(135deg, 
          rgba(16, 185, 129, 0.15) 0%,
          rgba(20, 184, 166, 0.12) 35%,
          rgba(14, 165, 233, 0.08) 70%,
          rgba(139, 92, 246, 0.05) 100%);
        border-image: linear-gradient(to bottom, #10b981, #14b8a6, #0ea5e9) 1;
      }

      :global(h3) {
        @apply font-bold mt-6 mb-3 bg-gradient-to-r from-emerald-400 to-green-500 bg-clip-text text-transparent;
        font-size: 1.25rem;
      }

      /* Common styles for all sections */
      :global(hr) {
        @apply my-12 border-0 h-px bg-gradient-to-r from-transparent via-gray-600 to-transparent;
      }

      /* Section styling */
      :global(section) {
        @apply rounded-2xl p-6 mb-6 
               shadow-[0_4px_20px_rgba(0,0,0,0.3),0_0_0_1px_rgba(255,255,255,0.1),inset_0_1px_0_rgba(255,255,255,0.15)] 
               transition-all duration-500 ease-out
               relative overflow-hidden;
        background: linear-gradient(135deg, 
          rgba(51, 65, 85, 0.4) 0%,
          rgba(71, 85, 105, 0.35) 25%,
          rgba(30, 41, 59, 0.3) 50%,
          rgba(51, 65, 85, 0.25) 75%,
          rgba(71, 85, 105, 0.2) 100%);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(16, 185, 129, 0.2);
        position: relative;
        z-index: 1;
      }

      :global(section:hover) {
        transform: translateY(-2px);
        box-shadow: 
          0 8px 40px rgba(0,0,0,0.4),
          0 0 0 1px rgba(16, 185, 129, 0.3),
          inset 0 1px 0 rgba(255,255,255,0.2);
        background: linear-gradient(135deg, 
          rgba(51, 65, 85, 0.5) 0%,
          rgba(71, 85, 105, 0.45) 25%,
          rgba(30, 41, 59, 0.4) 50%,
          rgba(51, 65, 85, 0.35) 75%,
          rgba(71, 85, 105, 0.3) 100%);
      }

      /* „Çª„ÇØ„Ç∑„Éß„É≥„ÅÆÂÜÖÂÅ¥ÂÖâÂäπÊûú */
      :global(section)::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        pointer-events: none;
      }

      :global(section)::after {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
                                  rgba(34, 197, 94, 0.05), transparent 40%);
        border-radius: inherit;
        opacity: 0;
        transition: opacity 500ms;
        pointer-events: none;
      }

      :global(section:hover)::after {
        opacity: 1;
      }

      /* „É™„É≥„ÇØ„Çπ„Çø„Ç§„É´ - ÂÖÉ„ÅÆgreenÁ≥ª„Å´Êàª„Åô */
      :global(a) {
        @apply text-green-500 no-underline hover:underline transition-colors duration-300;
      }

      /* „Ç∞„É©„Éá„Éº„Ç∑„Éß„É≥„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥ */
      @keyframes gradient-shift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }

      @media (max-width: 640px) {
        .max-w-4xl {
          @apply p-3;
        }
        
        main {
          @apply p-6;
        }

        :global(h1) {
          @apply text-3xl;
        }

        :global(section) {
          @apply p-4 mb-4;
        }

        :global(.flex) {
          @apply flex-col gap-2;
        }

        :global(.w-8) {
          @apply w-6 h-6;
        }
        
        :global(table td) {
          @apply p-2 text-sm;
        }
        
        :global(table td:first-child) {
          @apply w-20 text-sm;
        }

        :global(table th:first-child) {
          @apply w-20 text-sm;
        }
      }
    </style>
    
    <script>
      // Ë¶ãÂá∫„Åó„Å®Ëã±Ë™ûID„ÅÆ„Éû„ÉÉ„Éî„É≥„Ç∞
      const headingMap = {
        'Âü∫Êú¨ÊÉÖÂ†±': 'basic-info',
        'ËÅ∑ÂãôÁµåÊ≠¥': 'work-experience',
        'ÂøóÊúõÂãïÊ©ü': 'motivation',
        'Ëá™Â∑±PR': 'self-pr',
        '„Ç¢„Ç¶„Éà„Éó„ÉÉ„Éà': 'output',
        'ÂÄã‰∫∫ÊÉÖÂ†±': 'personal'
      };

      // DOMContentLoaded„Ç§„Éô„É≥„Éà„Åß„Ç¢„É≥„Ç´„Éº„É™„É≥„ÇØ„ÇíË®≠ÂÆö
      document.addEventListener('DOMContentLoaded', function() {
        // „Åô„Åπ„Å¶„ÅÆh2Ë¶ÅÁ¥†„ÇíÂèñÂæó
        const headings = document.querySelectorAll('h2');
        
        headings.forEach((heading) => {
          const headingText = heading.textContent.trim();
          const id = headingMap[headingText];
          
          if (id) {
            // ID„ÇíË®≠ÂÆö
            heading.id = id;
            
            // „Ç¢„É≥„Ç´„Éº„É™„É≥„ÇØ„Çí‰ΩúÊàê
            const anchor = document.createElement('a');
            anchor.href = `#${id}`;
            anchor.className = 'anchor-link';
            anchor.innerHTML = 'üîó';
            anchor.setAttribute('aria-label', `${headingText}„Å∏„ÅÆ„É™„É≥„ÇØ`);
            
            // „ÇØ„É™„ÉÉ„ÇØ„Ç§„Éô„É≥„Éà„ÇíËøΩÂä†
            anchor.addEventListener('click', function(e) {
              e.preventDefault();
              
              // URL„ÇíÊõ¥Êñ∞
              history.pushState(null, null, `#${id}`);
              
              // „Çπ„É†„Éº„Ç∫„Çπ„ÇØ„É≠„Éº„É´
              heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
            });
            
            // Ë¶ãÂá∫„Åó„ÅÆÂÖàÈ†≠„Å´ËøΩÂä†
            heading.insertBefore(anchor, heading.firstChild);
          }
        });
        
        // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´„Éè„ÉÉ„Ç∑„É•„Åå„ÅÇ„ÇãÂ†¥Âêà„ÅÆÂá¶ÁêÜ
        if (window.location.hash) {
          const targetId = window.location.hash.slice(1);
          const targetElement = document.getElementById(targetId);
          
          if (targetElement) {
            setTimeout(() => {
              targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
          }
        }
      });
    </script>
  </body>
</html>